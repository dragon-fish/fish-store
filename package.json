{
  "name": "fish-store",
  "version": "1.0.0",
  "description": "Fish's memory is only 7 seconds - Universal storage managers with auto expiration support",
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "unbuild",
    "postinstall": "playwright install",
    "test": "run-p test:*",
    "test:node": "cross-env VITEST_BROWSER=0 vitest run",
    "test:browser": "cross-env VITEST_BROWSER=1 vitest run",
    "test:browser:chromium": "cross-env VITEST_BROWSER=1 VITEST_BROWSERS=chromium vitest run",
    "test:browser:firefox": "cross-env VITEST_BROWSER=1 VITEST_BROWSERS=firefox vitest run",
    "test:browser:webkit": "cross-env VITEST_BROWSER=1 VITEST_BROWSERS=webkit vitest run"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "require": "./dist/types.cjs"
    },
    "./adapters/IDBFishStore": {
      "import": "./dist/adapters/IDBFishStore.mjs",
      "require": "./dist/adapters/IDBFishStore.cjs"
    },
    "./adapters/ClassicStorageFishStore": {
      "import": "./dist/adapters/ClassicStorageFishStore.mjs",
      "require": "./dist/adapters/ClassicStorageFishStore.cjs"
    },
    "./models/MemoryStorage": {
      "import": "./dist/models/MemoryStorage.mjs",
      "require": "./dist/models/MemoryStorage.cjs"
    }
  },
  "keywords": [
    "fish-store",
    "store",
    "database",
    "db",
    "localstorage",
    "storage",
    "indexeddb",
    "idb",
    "kv",
    "map"
  ],
  "author": "dragon-fish <dragon-fish@qq.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "idb-plus": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/browser-playwright": "^4.0.18",
    "cross-env": "^10.1.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.58.0",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.18"
  }
}
